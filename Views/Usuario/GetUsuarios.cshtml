@model List<Usuario>

<h2>Usuarios</h2>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var usuario in Model){
            <tr>
                <td>@usuario.NombreUsuario</td>
                <td>
                    <button type="button" class="btn btn-secondary">
                        <a asp-controller="Usuario" asp-action="EditarUsuario" asp-route-idUsuario="@usuario.IdUsuario">Editar</a>
                    </button>

                    <button type="button" class="btn btn-danger">
                        <a asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.IdUsuario" onclick="return confirm('Estas seguro que quieres eliminar al usuario @usuario.NombreUsuario ?')">Eliminar</a>
                    </button>
                </td> 
            </tr>
        }
    </tbody>
</table>